---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkInIcon from "./icons/LinkInIcon.astro";

---
<section class="container grid min-h-screen pt-20 mx-auto lg:grid-cols-2 place-items-center font-poppins">

  <div class="flex flex-col px-4 mx-auto md:px-8 animate-fade-down lg:animate-fade-right animate-once animate-duration-2000 animate-ease-out animate-normal animate-fill-forwards">
    <h2 class="text-2xl font-bold uppercase md:text-3xl xl:text-5xl text-my-white">Hi, I'm  Nahuel Pedroso</h2>
    <h1 class="text-4xl font-bold uppercase lg:my-2 md:text-5xl xl:text-7xl text-my-purple">Web Developer</h1>
    <div class="flex items-center gap-4 mt-2">
      <button class="w-24 py-2 text-xs transition-transform rounded md:text-sm hover:scale-105 text-my-white bg-my-purple">Contact</button>
      <button class="transition-transform hover:scale-105" aria-label="to github page"><GithubIcon/></button>
      <button class="transition-transform hover:scale-105" aria-label="to linkin page"><LinkInIcon/></button>
    </div>
  </div>
  <div class="max-w-md px-4 md:px-8 animate-fade-up lg:animate-fade-left lg:max-w-none animate-once animate-duration-2000 animate-ease-out animate-normal animate-fill-forwards">
    <img src='/images/home.svg' alt="developer" />
  </div>
</section>